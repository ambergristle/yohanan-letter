datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String @db.Char(60)
  role     Role
  @@map(name: "users")
}

enum Role {
  USER
  ADMIN
}

model Token {
  token String @id
  @@map(name: "tokens")
}

model Post {
  id      String    @id @db.Char(36)
  date    DateTime
  topic   String
  content String
  sources Source[]
  tags    Tag[]
  @@map(name: "posts")
}

model Source {
  id     String @id @db.Char(36)
  title  String
  href   String
  post   Post   @relation(fields: [postId], references: [id])
  postId String @db.Char(36) @map("post_id")
  @@map(name: "sources")
}

model Tag {
  id    String @id @db.Char(36)
  name  String @unique
  posts Post[]
  @@map(name: "tags")
}
