datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String @db.Char(60)
  role     Role
  @@map(name: "users")
}

enum Role {
  USER
  ADMIN
}

model Token {
  token String @id
  @map(name: "tokens")
}
