generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String @db.Char(60)
  role     Role

  @@map("users")
}

model Token {
  token String @id

  @@map("tokens")
}

model Letter {
  id      String   @id @db.Char(36)
  date    DateTime
  subject String
  intro   String
  draft   Boolean
  slug    String
  outro   String
  posts   Post[]

  @@map("letters")
}

model Post {
  id       String   @id @db.Char(36)
  date     DateTime
  letterId String   @map("letter_id") @db.Char(36)
  draft    Boolean
  title    String
  text     String
  slug     String
  letter   Letter   @relation(fields: [letterId], references: [id])
  sources  Source[]
  tags     Tag[]

  @@map("posts")
}

model Source {
  id     String @id @db.Char(36)
  title  String
  href   String
  postId String @map("post_id") @db.Char(36)
  post   Post   @relation(fields: [postId], references: [id])

  @@map("sources")
}

model Tag {
  id    String @id @db.Char(36)
  name  String @unique
  posts Post[]

  @@map("tags")
}

enum Role {
  USER
  ADMIN
  STAFF
}
