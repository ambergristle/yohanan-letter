html
  head
  body(style={"padding": "0px"})
    table(style={"width": "100%"})
      tr
        td
        td(style={
          "width": "500px",
          "max-width": "500px",
          "background": styles.background,
        })
          table(style={
              "width": "100%",
              "padding": "15px",
              "font-family": styles.fontPrimary,
              "font-size": "14px",
              "font-weight": "300",
              "text-align": "justify",
              "color": styles.colorPrimary
            })
            tr: td(style={"padding": "15px"})
            tr(style={"text-align": "center"})
              td
                a(
                  href="https://www.yohananletter.com"
                  target="_blank"
                  style={"color": styles.colorSecondary, "text-decoration": "none"}
                  )
                  strong(style={
                    "font-size": "28px",
                    "font-family": styles.fontSecondary
                  }) The Yohanan Letter
                  br
                  span Legal News for Investors and Entrepreneurs
                  br
                  em(style={"font-size": "12px"}) No Ads. No Fees. No Bullshit.
            tr: td(style={"padding": "15px"})
            tr
              td(style={"text-align": "center"})
                a(
                  href="https://cdn.forms-content.sg-form.com/b5a15d41-508c-11eb-b248-ea422c4fb1a2"
                  target="_blank"
                  ): button(style={
                  "padding": "10px 20px",
                  "background-color": styles.colorSecondary,
                  "border-radius": "2em",
                  "border": "none",
                  "font-size": "12px",
                  "font-family": styles.fontSecondary,
                  "font-weight": "700",
                  "color": styles.background,
                  "cursor": "pointer"
                }) Subscribe
            tr: td(style={"padding": "15px"})
            tr
              td
                p(style={"text-align": "right"})
                  span New York City
                  br
                  span #{letter.date}
                p(style={"text-align": "left"})
                  span Good Morning Investors and Entrepreneurs,
                p(style={"padding-bottom": "10px", "text-align": "left"})
                  span It's Yohan.
            tr: td !{letter.intro}
            tr: td(style={"padding": "15px"})      
            each post, index in letter.posts
              tr: td
                button(style={
                  "padding": "2px 8px",
                  "border": "none",
                  "border-radius": "2em",
                  "background": styles.colorSecondary,
                  "font-size": "18px",
                  "font-weight": "700",
                  "color": styles.background
                }) #{post.title}
                div !{post.text}
                strong(style={"color": styles.colorSecondary}) More knowledge:
                each source in post.sources
                  p: a(
                    href=source.href
                    style={"color": styles.colorTertiary, "font-weight": "700"}
                  ) #{source.title}
              if letter.outro || index < letter.posts.length - 1
                tr: td(style={"padding": "15px"})
            if letter.outro
              tr: td !{letter.outro}
            tr: td(style={"padding": "20px"})
            tr
              td
                p: em #{context.bio}
                p: span #{context.appeal}
            tr: td(style={"padding": "30px"})
            tr
              td(style={"text-align": "center"})
                a(
                  href="https://cdn.forms-content.sg-form.com/b5a15d41-508c-11eb-b248-ea422c4fb1a2"
                  target="_blank"
                ): button(style={
                  "padding": "10px 20px",
                  "background-color": styles.colorSecondary,
                  "border-radius": "2em",
                  "border": "none",
                  "font-size": "18px",
                  "font-family": styles.fontSecondary,
                  "font-weight": "700",
                  "color": styles.background,
                  "cursor": "pointer"
                }) Subscribe
            tr: td(style={"padding": "30px"})
            tr: td: strong(style={
              "font-size": "10px",
              "line-height": "1",
              "color": "rgba(192, 39, 57, 1)"
            }) #{context.disclaimer}
        td
    table(style={"width": "100%"})
      tr(style={
        "font-family": styles.fontPrimary,
        "font-size": "10px"
      })
        td(style={"text-align": "center"})
          a(
            href="{{{unsubscribe}}}"
            target="_blank"
            style={"color": "rgba(147, 147, 147, 1)"}
          ) Unsubscribe
